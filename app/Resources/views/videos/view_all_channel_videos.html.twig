{% extends 'base.html.twig' %}
{% block body %}
    <nav class="navbar navbar-inverse navbar" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Sky Above Us</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="#">About</a>
                    </li>
                    <li>
                        <a href="#">Services</a>
                    </li>
                    <li>
                        <a href="#">Contact</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-- Page Content -->
    <div class="container">

        <!-- Page Header -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">{{ currentChannel }}
                    <small>channel</small>
                </h1>
            </div>
        </div>

        <!-- /.row -->

        <div class="container feature-page">
            <div class="row">
                <div class="col-lg-8">
                    {% for video in videos %}
                        <div class="col-md-6 portfolio-item">
                            <iframe  src= {{ video.path }} frameborder="0" allowfullscreen></iframe>
                            <h3>
                                <a href="#">Video Name</a>
                            </h3>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam viverra euismod odio, gravida pellentesque urna varius vitae.</p>
                        </div>
                    {% endfor %}
                </div>
                <div class="col-md-4">
                    <div class="well videoSideSearch">
                        <h4>Search</h4>
                        <div class="input-group">
                            <input type="text" class="form-control">
                            <span class="input-group-btn">
                            <button class="btn btn-default" type="button">
                                <span class="glyphicon glyphicon-search"></span>
                        </button>
                        </span>
                        </div>
                        <!-- /.input-group -->
                    </div>
                    <div class="well">
                        <h4>Find video by channel</h4>
                        <div class="row">
                            <div class="col-lg-6">
                                <ul class="list-unstyled">
                                    {% for channel in channels %}
                                    <li><a href="{{ path('viewing_all_channel_videos', {currentPage: 1, channelName: channel.channelName}) }}" class="portfolio-box">{{ channel.channelName }}</a>
                                        {% endfor %}
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="well">
                        <h4>Find video by planet</h4>
                        <div class="row">
                            <div class="col-lg-6">
                                <ul class="list-unstyled">
                                    {% for planetlist in planetsList %}
                                    <li><a href="{{ path('view_videos_by_name', {planetName: planetlist.name, currentPage:1}) }}" class="portfolio-box">{{ planetlist.name }}</a>
                                        {% endfor %}
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- /.row -->
                </div>
                <div class="row text-center">
                    <div class="col-lg-12">
                        <ul class="pagination">
                            {% if maxPages > 1 %}
                            <li {{ currentPage == 1 ? 'class="disabled"' }}>
                                <a href="{{ path('viewing_all_channel_videos', {currentPage: currentPage-1 < 1 ? 1 : currentPage-1, channelName: currentChannel}) }}">&laquo;</a>
                            </li>
                            {% for i in 1..maxPages %}
                                <li {{ currentPage == i ? 'class="active"' }}>
                                    <a href="{{ path('viewing_all_channel_videos', {currentPage: i, channelName: currentChannel}) }}">{{ i }}</a>
                                </li>
                            {% endfor %}
                            <li {{ currentPage == maxPages ? 'class="disabled"' }}>
                                <a href="{{ path('viewing_all_channel_videos', {currentPage: currentPage+1 <= maxPages ? currentPage+1 : currentPage, channelName: currentChannel}) }}">&raquo;</a>
                            </li>
                        </ul>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Sky Above Us</p>
                </div>
            </div>
            <!-- /.row -->
        </footer>

    </div>

{% endblock %}
