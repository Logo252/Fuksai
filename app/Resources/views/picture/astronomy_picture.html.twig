{% extends 'picture/base_picture.html.twig' %}

{% block body %}

    <div class="container feature-page">

        <div class="row">

            <div class="col-lg-12">
                <!-- Title -->
                <h2 id="picture">{{ pictures[picture].title }}</h2>

                <!-- Date -->
                <h4 id="picture">{{ pictures[picture].getDateInString }}</h4>
            </div>

            <!-- Blog Post Content Column -->
            <div class="col-lg-6">

                <!-- Preview Image -->
                <img class="img-responsive" src="{{ pictures[picture].url }}" alt="">

                <br>

                <hr>

            </div>

            <div class="col-lg-6">
                <!-- Post Content -->
                <p>{{ pictures[picture].explanation }}</p>
            </div>

            <div class="col-lg-12">
                <!-- All astronomy pictures of the day -->
                <div class="all-apod">
                    <a class="all-apod-button" href="{{ path('astronomy_pictures') }}">
                        All astronomy pictures
                    </a>
                </div>
            </div>

        </div>
        <!-- /.row -->
        <!-- Footer -->
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                        <p class="copyright text-muted">&copy; 2016 SkyAboveUs.</p>
                    </div>
                </div>
            </div>
        </footer>

    </div>
{% endblock %}

