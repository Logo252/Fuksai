{% extends 'base.html.twig' %}

{% block body %}
    <div class="container feature-page">

        <div class="row">

            <!-- Blog Post Content Column -->
            <div class="col-lg-12">

                <!-- Blog Post -->

                <h1> Astronomy Picture of the Day</h1>

                <br>

                <!-- Title -->
                <h1>{{ pictures[0].title }}</h1>

                <!-- Date -->
                <h3>{{ pictures[0].getDateInString }}</h3>

                <hr>

                <!-- Preview Image -->
                <img class="img-responsive" src="{{ pictures[0].url }}" alt="">

                <hr>

                <!-- Post Content -->
                <p>{{ pictures[0].explanation }}</p>

                <hr>

            </div>

        </div>
        <!-- /.row -->
        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy;Sky Above Us</p>
                </div>
            </div>
            <!-- /.row -->
        </footer>

    </div>
{% endblock %}
