{% extends 'picture/base_picture.html.twig' %}

{% block body %}

    <div class="container feature-page">

        <div class="row">
            <ul class="pager">
                <li class="previous">
                    <a href="{{ path('astronomy_pictures') }}">&larr;More Pictures</a>
                </li>
            </ul>
            <div class="col-md-12">
                <!-- Title -->
                <h2 id="picture">{{ pictures[picture].title }}</h2>

                <!-- Date -->
                <h4 id="picture">{{ pictures[picture].getDateInString }}</h4>
            </div>

            <!-- Blog Post Content Column -->
            <div class="col-md-6">

                <!-- Preview Image -->
                <div class='item' ><a href="{{ pictures[picture].url }}" data-lightbox='all_gallery'>
                        <img src="{{ pictures[picture].url }}" alt='' >
                    </a></div>
                <br>

                <hr>

            </div>

            <div class="col-lg-6">
                <!-- Post Content -->
                <p>{{ pictures[picture].explanation }}</p>
            </div>

        </div>
        <!-- /.row -->
        <!-- Footer -->

    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <p style="float: right;">Copyright &copy;Sky Above Us</p>
            </div>
        </div>
    </div>
{% endblock %}

