{% extends 'picture/base_picture.html.twig' %}

{% block body %}
    <div class="container feature-page">
        <div class="row">

            <!-- Blog Post Content Column -->
            <div class="col-lg-12">

                <ul type="square">

                    {% for picture in pictures %}
                        <div class="container apod">
                            <div class="row">
                                <section class="col-md-12">
                                    <div class="container-inner">
                                        <div class="picture-header col-md-2">
                                            <p class="picture-date">{{ picture.getDateInString }}</p>
                                        </div>
                                        <a href="{{ path('astronomy_picture', {picture: loop.index0}) }}">
                                            <div class="image-container col-md-10">
                                                <div class="col-md-4 picture-text">
                                                    <h2><i class="fa fa-camera" aria-hidden="true"></i>
                                                        {{ picture.title }}
                                                    </h2>
                                                    <p>{{ picture.explanation | slice(0, 200) }}... </p>
                                                </div>
                                                <div class="col-md-8 picture-image ">
                                                    <img class="img-responsive" src="{{ picture.url }}">
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                </section>
                            </div>
                        </div>
                    {% endfor %}

                </ul>

            </div>

        </div>
        <!-- /.row -->
        <br>
        <br>
        <hr>
        <!-- Footer -->
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                        <p class="copyright text-muted">&copy; 2016 SkyAboveUs.</p>
                    </div>
                </div>
            </div>
        </footer>

    </div>
{% endblock %}

