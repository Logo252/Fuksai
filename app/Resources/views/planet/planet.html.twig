{% extends 'planet/base_planet.html.twig' %}

{% block body %}
    <div class="container feature-page">

        <div class="row">

            <!-- Blog Post Content Column -->
            <div class="col-lg-8">

                <!-- Blog Post -->

                <!-- Title -->
                <h1>{{ planet.name }}</h1>
                <h6>{{ planet.namedAs }}</h6>

                <!-- Author -->
                <p>
                    by Fuksai
                </p>

                <hr>

                <!-- Preview Image -->
                <img class="img-responsive" src="{{ asset( planet.image ) }}" alt="">

                <hr>

                <!-- Post Content -->
                <p class="lead">{{ planet.name }}</p>
                <p>{{ planet.description }}</p>

                <hr>

                <!-- If first planet article exist then start displaying related articles -->
                {% if (planetArticles[0] is defined) %}

                    <div class="container" >
                        <div class="col-md-8">
                            <h1 align="center">Related Articles</h1>

                            <div class="well">
                                <div id="planetArticle" class="carousel slide">

                                    {# if 5 planet article exist then display carousel-inner class otherwise display only 4 articles #}
                                        {% if planetArticles[4] is defined %}
                                        <!-- Carousel items -->
                                        <div class="carousel-inner">
                                            <div class="item active">
                                                <div class="row">
                                                    {% for i in 0..3 %}
                                                        {% if (planetArticles[i] is defined) %}
                                                            <div class="col-sm-3">
                                                                <a href="{{ path('show_article', {'id': planetArticles[i].id}) }}" class="thumbnail">
                                                                    <img src="{{ planetArticles[i].urlToImage }}" alt="Image" class="img-responsive">
                                                                    <!-- Title -->
                                                                    <h5>{{ planetArticles[i].title }}</h5>
                                                                </a>
                                                            </div>
                                                        {% endif %}
                                                    {% endfor %}
                                                </div>
                                                <!--/row-->
                                            </div>
                                            <!--/item-->
                                            <div class="item">
                                                <div class="row">
                                                    {% for i in 4..7 %}
                                                        {% if (planetArticles[i] is defined) %}
                                                            <div class="col-sm-3">
                                                                <a href="{{ path('show_article', {'id': planetArticles[i].id}) }}" class="thumbnail">
                                                                    <img src="{{ planetArticles[i].urlToImage }}" alt="Image" class="img-responsive">
                                                                    <!-- Title -->
                                                                    <h5>{{ planetArticles[i].title }}</h5>
                                                                </a>
                                                            </div>
                                                        {% endif %}
                                                    {% endfor %}
                                                </div>
                                                <!--/row-->
                                            </div>
                                            <!--/item-->
                                            <div class="item">
                                                <div class="row">
                                                    {% for i in 8..11 %}
                                                        {% if (planetArticles[i] is defined) %}
                                                            <div class="col-sm-3">
                                                                <a href="{{ path('show_article', {'id': planetArticles[i].id}) }}" class="thumbnail">
                                                                    <img src="{{ planetArticles[i].urlToImage }}" alt="Image" class="img-responsive">
                                                                    <!-- Title -->
                                                                    <h5>{{ planetArticles[i].title }}</h5>
                                                                </a>
                                                            </div>
                                                        {% endif %}
                                                    {% endfor %}
                                                </div>
                                                <!--/row-->
                                            </div>
                                            <!--/item-->
                                        </div>

                                        <!--/carousel-inner-->
                                        <a class="left carousel-control" href="#planetArticle" data-slide="prev">
                                            <span class="icon-prev"></span>
                                        </a>
                                        <a class="right carousel-control" href="#planetArticle" data-slide="next">
                                            <span class="icon-next"></span>
                                        </a>
                                    {% else %}
                                        <div class="row">
                                            {% if planetArticles[3] is defined %}
                                                {% for i in 0..3 %}
                                                    <div class="col-sm-3">
                                                        <a href="{{ path('show_article', {'id': planetArticles[i].id}) }}" class="thumbnail">
                                                            <img src="{{ planetArticles[i].urlToImage }}" alt="Image" class="img-responsive">
                                                            <!-- Title -->
                                                            <h5>{{ planetArticles[i].title }}</h5>
                                                        </a>
                                                    </div>
                                                {% endfor %}
                                            {% elseif planetArticles[2] is defined%}
                                                {% for i in 0..2 %}
                                                    <div class="col-sm-4">
                                                        <a href="{{ path('show_article', {'id': planetArticles[i].id}) }}" class="thumbnail">
                                                            <img src="{{ planetArticles[i].urlToImage }}" alt="Image" class="img-responsive">
                                                            <!-- Title -->
                                                            <h5>{{ planetArticles[i].title }}</h5>
                                                        </a>
                                                    </div>
                                                {% endfor %}
                                            {% elseif planetArticles[1] is defined%}
                                                {% for i in 0..1 %}
                                                    <div class="col-sm-6">
                                                        <a href="{{ path('show_article', {'id': planetArticles[i].id}) }}" class="thumbnail">
                                                            <img src="{{ planetArticles[i].urlToImage }}" alt="Image" class="img-responsive">
                                                            <!-- Title -->
                                                            <h5>{{ planetArticles[i].title }}</h5>
                                                        </a>
                                                    </div>
                                                {% endfor %}
                                            {% elseif planetArticles[0] is defined%}
                                                <div class="col-sm-12">
                                                    <a href="{{ path('show_article', {'id': planetArticles[0].id}) }}" class="thumbnail">
                                                        <img src="{{ planetArticles[0].urlToImage }}" alt="Image" class="img-responsive">
                                                        <!-- Title -->
                                                        <h5>{{ planetArticles[0].title }}</h5>
                                                    </a>
                                                </div>
                                            {% endif %}
                                        </div>
                                        <!--/row-->
                                    {% endif %}
                                </div>
                                <!--/sliderRelatedArticles-->
                            </div>
                            <!--/well-->
                        </div>
                    </div>

                    <!-- More related planet articles -->
                    {% if (planetArticles[12] is defined) %}
                        <a href="{{ path('planet_articles', {'planet': planetArticles[0].planet, 'number': 1}) }}">
                            <h3 align="center">More Related Articles</h3>
                        </a>
                    {% endif %}

                {% endif %}

            </div>

            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-4">

                <!-- Blog Categories Well -->
                <div class="well">
                    <h4>Categories</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                {% for planetlist in planetsList %}
                                <li><a href="{{ path('show_planet', {'planetName': planetlist.name}) }}" class="portfolio-box">{{ planetlist.name }}</a>
                                    {% endfor %}
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- /.row -->
                </div>

                <!-- Side Widget Well -->
                <div class="well">
                    <p> Basic information
                        <ul>
                        <li>Planet Position:{{ planet.position }}</li>
                        <li>Planet Diameter: {{ planet.diameter }}</li>
                        <li>Planet Orbit: {{ planet.orbit }}</li>
                        <li>Planet Day: {{ planet.day }}</li>
                    </ul>
                    </p>
                </div>

                {% if video is not null %}
                    <div class="well">
                        <h4>Related Video</h4>
                        <iframe  src= {{ video.path }} frameborder="0" allowfullscreen></iframe>
                    </div>
                {% endif %}

            </div>

        </div>
        <!-- /.row -->
        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy;Sky Above Us</p>
                </div>
            </div>
            <!-- /.row -->
        </footer>

    </div>
{% endblock %}
