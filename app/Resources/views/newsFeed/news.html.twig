{% extends 'base.html.twig' %}

{% block body %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Description</th>
            <th>Image path</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.description }}</td>
                <td>{{ article.url }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
