{% extends 'base.html.twig' %}

{% block body %}

    <div class="container feature-page">

        <div class="row">

            <!-- Blog Post Content Column -->
            <div class="col-lg-8">

                <!-- Blog Post -->

                <!-- Title -->
                <h1>{{ article.title }}</h1>

                <!-- Author and Publish Date -->
                <h6> {{ article.author }} | Published:  {{ article.getPublishDateInString }} </h6>


                <!-- Preview Image -->
                <img class="img-responsive" src="{{ article.urlToImage }}" alt="" >

                <hr>

                <!-- Post Content -->
                <p>{{ article.description }}</p>
                <p> <i> This article originally appeared on</i>
                    <a href={{ article.url }}>
                        The New York Times.
                    </a>
                </p>

                <hr>

                {#<!-- Blog Comments -->

                <!-- Comments Form -->
                <div class="well">
                    <h4>Leave a Comment:</h4>
                    <form role="form">
                        <div class="form-group">
                            <textarea class="form-control" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>

                <hr>#}


            </div>

            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-4">

                <!-- Blog Search Well -->
                <div class="well sideSearch">
                    <h4>Search</h4>
                    <div class="input-group">
                        <input type="text" class="form-control">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">
                                <span class="glyphicon glyphicon-search"></span>
                        </button>
                        </span>
                    </div>
                    <!-- /.input-group -->
                </div>

                <!-- Blog Categories Well -->
                <div class="well">
                    <h4>Categories</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                {% for planetlist in planetsList %}
                                <li><a href="{{ path('show_planet', {'planetName': planetlist.name}) }}" class="portfolio-box">{{ planetlist.name }}</a>
                                    {% endfor %}
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- /.row -->
                </div>

            </div>

        </div>
        <!-- /.row -->
        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy;SkyAboveUs</p>
                </div>
            </div>
            <!-- /.row -->
        </footer>
    </div>
{% endblock %}
