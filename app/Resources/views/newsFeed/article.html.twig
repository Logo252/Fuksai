{% extends 'base.html.twig' %}

{% block body %}

    <div class="container feature-page">

        <div class="row">

            <!-- Blog Post Content Column -->
            <div class="col-lg-8">

                <!-- Title -->
                <h1>{{ article.title }}</h1>

                <!-- Author and Publish Date -->
                <h6> Author: {{ article.author }} | Published:  {{ article.getPublishDateString }} </h6>


                <!-- Preview Image -->
                <img class="img-responsive" src="{{ article.urlToImage }}" alt="" style='height: 100%; width: 100%; object-fit: contain' >

                <hr>

                <!-- Post Content -->
                <p>{{ article.description|nl2br|nl2br }}</p>

                <p> <i> This article originally appeared on</i>
                    <a href={{ article.url }}>
                        Astronomy Now.
                    </a>
                </p>

                <hr>

            </div>

            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-4">

                <!-- Blog Categories Well -->
                <div class="well">
                    <h4>Categories</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                {% for planet in planetsList %}
                                <li><a href="{{ path('planet_articles', {'planet': planet.name}) }}" class="portfolio-box">{{ planet.name }}</a>
                                    {% endfor %}
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- /.row -->
                </div>

            </div>

        </div>
        <!-- /.row -->
        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy;SkyAboveUs</p>
                </div>
            </div>
            <!-- /.row -->
        </footer>
    </div>
{% endblock %}
